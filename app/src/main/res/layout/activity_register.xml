<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register"
    android:background="@drawable/blue_background4">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register Here !!"
                android:id="@+id/tv1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:textSize="40dp"
                android:textColor="@android:color/white"/>


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_btn"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_below="@+id/tv1"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/default_profile" />

            <EditText
                android:id="@+id/username"
                android:layout_width="250dp"
                android:hint=" name..."
                android:layout_height="45dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/image_btn"
                android:layout_marginTop="40dp"
                android:drawableLeft="@drawable/ic_user"
                android:ems="10"
                android:inputType="textPersonName"
                android:background="@drawable/button_shape"
                />

            <EditText
                android:id="@+id/email"
                android:layout_width="250dp"
                android:layout_height="45dp"
                android:hint=" Email"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/username"
                android:layout_marginTop="40dp"
                android:ems="10"
                android:drawableLeft="@drawable/ic_email"
                android:background="@drawable/button_shape"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/mob_no"
                android:layout_width="250dp"
                android:layout_height="45dp"
                android:hint=" Contact No. "
                android:layout_centerHorizontal="true"
                android:layout_below="@id/email"
                android:layout_marginTop="40dp"
                android:ems="10"
                android:drawableLeft="@drawable/ic_local_phone"
                android:background="@drawable/button_shape"
                android:inputType="number" />

            <EditText
                android:id="@+id/password"
                android:layout_width="250dp"
                android:layout_height="45dp"
                android:hint=" password.."
                android:layout_centerHorizontal="true"
                android:layout_below="@id/mob_no"
                android:layout_marginTop="40dp"
                android:ems="10"
                android:background="@drawable/button_shape"
                android:drawableLeft="@drawable/ic_pass"
                android:inputType="textPassword" />

            <Button
                android:id="@+id/btn_register"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/password"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:textColor="@android:color/background_dark"
                android:text=" Register "
                android:textAlignment="center"
                android:textAllCaps="false"
                android:background="@drawable/button_shape"
                android:textSize="20dp" />



        </RelativeLayout>


    </ScrollView>






</RelativeLayout>